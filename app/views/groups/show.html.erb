<h1><%= @group.name %></h1>
<% if @items.first %>
<textarea rows="<%= @items.count %>" cols="<%= @items.map(&:name).max_by(&:length).length %>">
  <% @items.each do |item| %>
  <%= item.name %>
  <% end %>
</textarea><br><br>
<%= link_to('Edit this Group', edit_group_path) %>
<% else %>
No items in this group! <%= link_to('Add some', new_group_item_path(@group.id)) %>.
<% end %>