<h1>New Group</h1>
A backup form for people who aren't using JavaScript<br><br>
<%= form_for @group do |f| %>
<%= f.label(:author_id, 'Author: ') %>
<% authors_array = @authors.map { |author| [author.name, author.id]} %>
<%= f.select(:author_id, options_for_select(authors_array)) %><br>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>
<% end %>